  },
  "dependencies": {
    "chalk": "4.1.1",
    "tsx": "4.7.2"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/fs-extra": "11.0.4",
    "fs-extra": "11.2.0",
    "webpack": "5.88.0"
  },
  "peerDependencies": {
    "webpack": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "gitHead": "4e864f69d1f82a93f53233cf5669fe13d023d132"
}
