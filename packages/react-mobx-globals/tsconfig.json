{
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "target": "ES2015",
    "moduleResolution": "node",
    "ignoreDeprecations": "5.0",
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "experimentalDecorators": true
  }
}