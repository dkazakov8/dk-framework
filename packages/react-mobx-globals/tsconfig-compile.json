{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "module": "commonjs",
    "ignoreDeprecations": "5.0",
    "target": "ES2022",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDeclarationOnly": true
  }
}