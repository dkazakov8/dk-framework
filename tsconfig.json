{
  "include": [
    "packages"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "ES2015",
    "ignoreDeprecations": "5.0",
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "experimentalDecorators": true
  }
}